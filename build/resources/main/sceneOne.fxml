      <ImageView fitHeight="152.0" fitWidth="274.0" layoutX="268.0" layoutY="83.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@styles/images/s-l400-removebg-preview.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
