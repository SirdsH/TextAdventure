      <Label fx:id="textTitle" layoutX="256.0" layoutY="14.0" text="Magium">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Button fx:id="exitBtn" layoutX="56.0" layoutY="200.0" mnemonicParsing="false" onAction="#exitGame" prefHeight="44.0" prefWidth="105.0" text="Exit" />
      <TextField fx:id="nicknameField" layoutX="403.0" layoutY="270.0" onAction="#setNickname" />
      <Text layoutX="268.0" layoutY="288.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Choose a nickname:">
         <font>
            <Font size="14.0" />
         </font>
      </Text>
      <Label fx:id="nicknameOutput" layoutX="403.0" layoutY="309.0" prefHeight="44.0" prefWidth="180.0" text="None">
